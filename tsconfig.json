{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "isolatedModules": true,
        "baseUrl": "./src",
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "resolveJsonModule": true,
            "noImplicitAny": false,
            "baseUrl": "./src",
        }
    }
}